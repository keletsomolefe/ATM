
@{
    ViewBag.Title = "Enter pin";
}

<div layout="column" layout-align="center center">
    <md-card style="height: 60px; width: 250px; color: {{atm.color}}" layout-align="center center">
        {{ atm.attempts }}
    </md-card>
    <md-input-container>
        <label ng-hide="atm.error">Enter pin</label>
        <input ng-model="card.pin" ng-hide="atm.error">
        <br><br><br>
        <md-button class="md-raised md-primary" ng-click="authenticate()" ng-hide="atm.error">continue</md-button>
        <br><br>
        <md-button class="md-accent md-raised md-hue-1" ng-click="cancel()">Cancel</md-button>

    </md-input-container>
</div>

