
@{
    ViewBag.Title = "Main Menu";
    Layout = null;
}

<div class="md-padding" ng-cloak>
    <div layout="column" layout-align="center center">
        <h2 class="md-title" layout-align="center center">Main Menu</h2>
    </div>

    <div class="bottom-sheet-demo inset" layout="row" layout-sm="column" layout-align="center">
        <md-button flex="50" class="md-primary md-raised" ng-click="withdraw()">Withdraw</md-button>
        <md-button flex="50" class="md-primary md-raised" ng-click="balance()">Check Balance</md-button>
    </div>
    <div class="bottom-sheet-demo inset" layout="row" layout-sm="column" layout-align="center">
        <md-button flex="50" class="md-primary md-raised" ng-click="deposit()">Deposit</md-button>
        <md-button flex="50" class="md-primary md-raised" ng-disabled="true" ng-click="showGridBottomSheet()">Buy Airtime</md-button>
    </div>
    
    <div layout="column" layout-align="center center">
        <md-button class="md-raised md-warn" ng-click="cancel()">Cancel</md-button>
    </div>
</div>


