
@{
    ViewBag.Title = "Balance";
}

<div class="md-padding" ng-cloak>
    <div layout="column" layout-align="center center">
        <h2 class="md-title" layout-align="center center">Choose account</h2>
    </div>

    <div class="bottom-sheet-demo inset" layout="row" layout-sm="column" layout-align="center">
        @foreach (var account in ViewBag.Accounts)
        {
            <md-button flex="50" class="md-primary md-raised" ng-click="balanceOn('@account.AccountName')">@account.AccountName</md-button>
        }
    </div>

    <div layout="row" layout-align="center center">
        <md-button flex="10" class="md-raised md-primary" ng-click="back()">back</md-button>
        <md-button flex="10" class="md-raised md-warn" ng-click="cancel()">Cancel</md-button>
    </div>
</div>