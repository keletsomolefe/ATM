
@{
    ViewBag.Title = "Choose Deposit";
}

<div class="md-padding" ng-cloak>
    <div layout="column" layout-align="center center">
        <h2 class="md-title" layout-align="center center">Choose Deposit Amount</h2>
    </div>
    <div class="bottom-sheet-demo inset" layout="row" layout-sm="column" layout-align="center">
        <md-input-container layout="row">
            <label>Enter Amount</label>
            <input type="number" ng-model="atm.depositAmount" step="10" min="0" max="10000">
        </md-input-container>
    </div>

    <div layout="row" layout-sm="column" layout-align="center">
        <md-button flex="50" class="md-primary md-raised" ng-click="depositAmount(atm.depositAmount,$event)" ng-pattern="/^\d*$/">Deposit Entered Amount</md-button>
        <md-button flex="20" class="md-raised md-primary" ng-click="back()">back</md-button>
        <md-button flex="20" class="md-raised md-warn" ng-click="cancel()">Cancel</md-button>
    </div>
</div>


